<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>AssignPrivilegeServlet</servlet-name>
    <servlet-class>com.rbac.controllers.AssignPrivilegeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SaveRolePrivilegesServlet</servlet-name>
    <servlet-class>com.rbac.controllers.SaveRolePrivilegesServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RefreshPrivilegesServlet</servlet-name>
    <servlet-class>com.rbac.controllers.RefreshPrivilegesServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>AssignPrivilegeServlet</servlet-name>
    <url-pattern>/servlet/AssignPrivilegeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SaveRolePrivilegesServlet</servlet-name>
    <url-pattern>/servlet/SaveRolePrivilegesServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RefreshPrivilegesServlet</servlet-name>
    <url-pattern>/servlet/RefreshPrivilegesServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
